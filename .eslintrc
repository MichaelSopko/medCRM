{
  "extends": [
    "eslint:recommended", "plugin:react/recommended", "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": [2, "single"],
    "default-case": 0,
    "no-unused-vars": 0,
    "linebreak-style": 0,
    "no-tabs": 0,
    "indent": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/display-name": 0,
    "react/prop-types": 0,
    "react/no-multi-comp": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": [0, { "forbid": ["array"] }]
  },
  "globals": {
    "window": true,
    "document": true,
    "__DEV__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__SSR__": true
  }
}
